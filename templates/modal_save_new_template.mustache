{{< core/modal }}
    {{$title}}{{#str}} savenewtemplate, mod_planner {{/str}}{{/title}}
    {{$body}}
        <div class="container">
            <form>
                <div class="form-group row">
                    <p class="mod_planner_savenewtemplate_text">{{#str}} enternewname, mod_planner {{/str}}</p>
                </div>
                <div class="form-group row">
                    <label for="newTemplateName" class="col-sm-2 col-form-label">{{#str}} templatename, mod_planner {{/str}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="newTemplateName"
                               placeholder="{{#str}}templatename, mod_planner{{/str}}" />
                    </div>
                </div>
            </form>
        </div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-primary" data-action="saveNewTemplate">{{#str}} savenewtemplate, mod_planner {{/str}}</button>
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
    {{/footer}}
{{/ core/modal }}