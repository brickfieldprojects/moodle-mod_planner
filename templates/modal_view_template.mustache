    @package     mod_planner
    @template    mod_planner/modal_view_template
    @author      Jay Churchward <jay@brickfieldlabs.ie>
    @copyright   2021 Brickfield Education Labs <jay@brickfieldlabs.ie>
    @license     http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later

    This template renders the save new template modal.

    Example context (json):
    {
        "plannertemplate": {
            "id": 1,
            "userid": 2,
            "name": "Template 1",
            "disclaimer": "This is template 1",
            "personal": 0,
            "status": 1,
            "copied": 0,
            "timecreated": 1623345600,
            "timemodified": 1623345600
        },
        "plannertemplatesteps": [
            {
                "id": 1,
                "plannerid": 1,
                "name": "Step 1",
                "timeallocation": "80",
                "description": "This is step 1",
                "stepnumber": 1
            },
            {
                "id": 2,
                "plannerid": 1,
                "name": "Step 2",
                "timeallocation": "20",
                "description": "This is step 2",
                "stepnumber": 2
            }
        ]
    }
}}
<div class="mod_planner_container">
    <h2>{{plannertemplate.name}}</h2>
    <p>{{{plannertemplate.disclaimer}}}</p>
    {{#plannertemplatesteps}}
        <hr>
        <p><strong>{{#str}} stepnamesettings, mod_planner, {{stepnumber}} {{/str}}</strong>: {{name}}</p>
        <p><strong>{{#str}} steptimeallocationsettings, mod_planner, {{stepnumber}} {{/str}}</strong>: {{timeallocation}}</p>
        <p><strong>{{#str}} stepdescriptionsettings, mod_planner, {{stepnumber}} {{/str}}</strong>: {{{description}}}</p>
    {{/plannertemplatesteps}}
</div>